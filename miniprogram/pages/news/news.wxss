/* pages/news/news.wxss */
page{
    background-color: var(--color-gray-light);
}

.news-box {
    box-sizing: border-box;
    padding: 25rpx 25rpx 25rpx 30rpx;
    margin: 30rpx;
    box-shadow: 13rpx 13rpx 30rpx var(--color-gray);
    border-radius: 20rpx;
    background-color: #FFFFFF;
    display: flex;
    justify-content: space-between;
    flex-grow: 1;
    overflow: hidden;
}

.news {
    font-weight: 300;
    /* margin: 10rpx 0; */
}

.news.infoBox{
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    overflow: hidden;
    flex-grow: 1;
}

.news.title {
    font-size: 33rpx;
    font-weight: 600;
    margin-bottom: 6rpx;
}

.news .row-container{
    display: flex;
    flex-direction: row;
    align-items: center;
    margin-bottom: 8rpx;
}
.news.tag {
    width: 80rpx;
    height: 38rpx;
    border-radius: 15rpx;
    margin: 4rpx 12rpx 0 0;
    
    font-size: 24rpx;
    font-weight: 500;
    text-align: center;
    line-height: 38rpx;

    background-color: var(--color-primary-light);
    color: var(--color-primary);
}

.news.user {
    font-size: 26rpx;
    color: var(--color-gray-dark);
    margin-right: 10rpx;

    white-space: nowrap;  
    text-overflow:ellipsis; 
    overflow:hidden;
}
.news.time {
    font-size: 26rpx;
    color: var(--color-gray-dark);
    flex-grow: 1;
    text-align: right;
    white-space: nowrap;  
    text-overflow:ellipsis; 
    overflow: hidden;
}

.news.content-wrapper{

    flex-grow: 1;
}
.news.content {
    font-size: 28rpx;
    font-weight: 400;
    /* letter-spacing:0.005rpx; */

    margin-bottom: 10rpx;
    overflow: hidden;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;

    color: var(--color-gray-max);

}

.loading image {
    width: 165.9rpx;
    height: 90.3rpx;
    margin: 10rpx 292rpx;
    margin-top: 40rpx;
}

.cover-image {
    width: 200rpx;
    height: 200rpx;

    border-radius: 10rpx;
    margin: 5rpx 5rpx 5rpx 30rpx;
    float: right;

    flex-shrink: 0;
    /* flex-grow: 1; */
}

/*轮播图+按钮容器*/
.stickyClass {
  /*position: sticky;*/
  top: 0rpx;
  z-index: 9999;
  padding-top: 25rpx;
  background-color: var(--color-gray-light);
  box-shadow: 0rpx 10rpx 30rpx var(--color-gray);
  height: auto;
}

/*按钮容器*/
.button_container {
    display: flex;
    flex-direction: row;
    margin: 0rpx 20rpx 0rpx 20rpx;
    justify-content: space-around;
    height: 130rpx;
    background-color: var(--color-gray-light);
    /*width: 100vw;*/
}

/* 按钮未选中 */
.normal_button {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  width: 15%;
  border-bottom: 5rpx solid transparent;
  background-color:var(--color-gray-light);
  padding: 8rpx 5rpx;
  box-sizing: border-box;
  transition: background-color 500ms ease,
              border-color 500ms ease,
              color 500ms ease,
              font-weight 500ms ease;
}
.normal_button .tab-logo {
  border-radius: 15rpx;
}

/* 按钮选中 */
.checked_button {
   border-color: var(--color-primary-dark);
   color: var(--color-primary-dark);
   font-weight: bold;
}

.tab-logo{
  width: 130rpx;
  height: 130rpx;
  padding: 8rpx 10rpx;
  filter: drop-shadow(0 0 3rpx rgb(160, 159, 159));
  transition: background-color 500ms ease,
              border-color 500ms ease,
              color 500ms ease,
              font-weight 500ms ease;
}
.checked_button .tab-logo {
  background-color: var(--color-primary-light);
  border-radius: 15rpx;
}

.tab-text{
    font-size: 24rpx;
    text-align: center;
}

.checked_button.tab-text{
    color: white;
    font-weight: 500;
}

.GoTopBtn {
    position: fixed;
    bottom: 4%;
    right: 6%;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    background-color: rgba(255, 255, 255, 0.6);
    border-radius: 90rpx;
    padding: 10rpx;
}

.GoTopBtn .logo {
    width: 90rpx;
    height: 90rpx;
    display: block;
} 

